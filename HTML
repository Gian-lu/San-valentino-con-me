<body>
    <div class="container">
        <h1>Sorpresa di San Valentino</h1>
        <p>Ciao [Nome],</p>
        <p>Vorresti uscire con me per San Valentino?</p>
        <button onclick="showMessage('Sì')">Sì</button>
        <button onclick="showMessage('No')">No</button>
        <p id="responseMessage"></p>
    </div>
    <script>
        function showMessage(response) {
            const message = response === 'Sì' ? 'Fantastico! Non vedo l\'ora!' : 'Peccato, magari un\'altra volta!';
            document.getElementById('responseMessage').innerText = message;
        }
    </script>
